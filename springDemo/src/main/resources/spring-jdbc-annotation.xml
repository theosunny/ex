        &lt;!&ndash;切入点&ndash;&gt;
        <aop:pointcut id="pointcut1" expression="execution(* com.spring.tx.OrderService.*(..))"/>
        &lt;!&ndash;切面&ndash;&gt;
        <aop:advisor advice-ref="txAdvice" id="advisor1" pointcut-ref="pointcut1"/>
    </aop:config>-->
</beans>